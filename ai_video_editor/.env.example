# Alibaba Cloud DashScope API Configuration
# Get your API key from: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY=sk-your-api-key-here
DASHSCOPE_REGION=singapore  # or 'beijing' for China mainland

# Alibaba Cloud OSS Configuration
# Create a RAM user and get credentials from: https://ram.console.aliyun.com/users
OSS_ACCESS_KEY_ID=your-ram-access-key-id
OSS_ACCESS_KEY_SECRET=your-ram-access-key-secret
OSS_REGION=oss-ap-southeast-1  # Singapore: oss-ap-southeast-1, Beijing: oss-cn-beijing
OSS_BUCKET=your-bucket-name

# Application Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGIN=http://localhost:8080

# Optional: Usage Limits (to control costs)
MAX_DAILY_REQUESTS=100
MAX_FILE_SIZE_MB=200
